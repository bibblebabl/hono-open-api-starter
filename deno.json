{
  "version": "1.0.0",
  "tasks": {
    "dev": "deno serve --watch --allow-net --allow-env --env-file --allow-sys src/app.ts",
    "test": "deno test --allow-read --allow-write --allow-run --allow-env --allow-net --allow-sys --env-file=.env.test src/",
    "db:push": "deno run --allow-net --node-modules-dir --allow-env --allow-read --allow-sys --allow-write --allow-run npm:drizzle-kit push",
    "db:push:test": "deno run --allow-net --node-modules-dir --allow-env --allow-read --allow-sys --allow-write --allow-run --env-file=.env.test npm:drizzle-kit push",
    "db:dev": "turso dev --db-file dev.db",
    "lint": "deno lint",
    "format": "deno fmt",
    "typecheck": "deno check **/*.ts"
  },
  "imports": {
    "@/": "./src/",
    "@hono/zod-openapi": "npm:@hono/zod-openapi@^0.17.0",
    "@libsql/client": "npm:@libsql/client@^0.14.0",
    "@scalar/hono-api-reference": "npm:@scalar/hono-api-reference@^0.5.159",
    "@std/assert": "jsr:@std/assert@1",
    "@std/expect": "jsr:@std/expect@^1.0.7",
    "drizzle-kit": "npm:drizzle-kit@^0.28.0",
    "drizzle-orm": "npm:drizzle-orm@^0.36.1",
    "drizzle-zod": "npm:drizzle-zod@^0.5.1",
    "hono": "npm:hono@^4.6.9",
    "hono-pino": "npm:hono-pino@^0.6.0",
    "pino": "npm:pino@^9.5.0",
    "pino-pretty": "npm:pino-pretty@^13.0.0",
    "stoker": "npm:stoker@^1.3.0",
    "zod": "npm:zod@^3.23.8"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": [
      "node"
    ],
    "strict": true
  }
}
